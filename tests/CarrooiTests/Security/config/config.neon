php:
	date.timezone: Europe/Prague


extensions:
	authorization: Carrooi\Security\DI\SecurityExtension


nette:
	application:
		scanDirs: false

	session:
		autoStart: false


services:

	cacheStorage:
		class: Nette\Caching\Storages\MemoryStorage

	user:
		class: CarrooiTests\SecurityMocks\UserMock

	nette.userStorage:
		class: CarrooiTests\SecurityMocks\UserStorageMock

	books:
		class: CarrooiTests\Security\Model\Books


authorization:

	default: true

	targetResources:
		CarrooiTests\Security\Model\Book: book

	resources:
		book: CarrooiTests\Security\Model\Books

		user:
			default: false

			actions:
				view: true
				delete: false

				detail:
					loggedIn: true

				add:
					roles: [admin]

		favorites:
			default: false
			actions:
				*:
					loggedIn: true
